<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	version="2.5">
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.servlet.HRConsole.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/loginServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>main</servlet-name>
		<servlet-class>com.servlet.HRConsole.MainServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/MainServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>division</servlet-name>
		<servlet-class>com.servlet.HRConsole.DivisionServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>division</servlet-name>
		<url-pattern>/DivisionServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>employee</servlet-name>
		<servlet-class>com.servlet.HRConsole.EmployeeServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>employee</servlet-name>
		<url-pattern>/EmployeeServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>timeLog</servlet-name>
		<servlet-class>com.servlet.HRConsole.TimeLogServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>timeLog</servlet-name>
		<url-pattern>/TimeLogServlet</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>search</servlet-name>
		<servlet-class>com.servlet.HRConsole.SearchServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>search</servlet-name>
		<url-pattern>/SearchServlet</url-pattern>
	</servlet-mapping>
	

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>  
